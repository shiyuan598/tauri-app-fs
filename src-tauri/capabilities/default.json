{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "opener:default",
    "dialog:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "D:\\test\\**"
        }
      ]
    },
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text"
  ]
}